<!-- visualizações/páginas/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <div class="jumbotron">
      <h1>This is great</h1>
      <p>Welcome to templating using EJS</p>


      <!-- Imprimir a lista contida na matriz mascots  
          var mascots = [  { name: 'Sammy', organization: "DigitalOcean", birth_year: 2012},
                            { name: 'Tux', organization: "Linux", birth_year: 1996},
                            { name: 'Moby Dock', organization: "Docker", birth_year: 2013}
                        ];      
      -->
      <ul>
        <% mascots.forEach(function(mascot) { %>
          <li>
            <strong><%= mascot.name %>,</strong>  representing: <%= mascot.organization %>, born: <%= mascot.birth_year %>
          </li>
        <% }); %>
      </ul>

    </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>